<h1>Create QR code response</h1>
<hr>
<h2>Try it:</h2>
<form action="/" class="w-25">
  <div class="mb-3">
    <input type="text" class="form-control" id="product" placeholder="Coffee" value="Coffee" name="product">
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">Cat</span>
    <input type="text" class="form-control" id="category" placeholder="Food" value="Food" name="category">
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">Qty</span>
    <input type="number" class="form-control" id="quantity" placeholder="1" value="2" name="quantity">
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">Â¥</span>
    <input type="text" class="form-control" aria-label="Amount" value="120" name="price">
  </div>
  <div class="d-grid">
    <button type="submit" class="btn btn-primary">Try</button>
  </div>
</form>

<% if @results.any? %>
<hr>
  <a href="<%= @page_url unless @page_url.nil? %>" class="mt-5 btn btn-primary" target="_blank">Check out the QR code</a>
  <h2 class="mt-3">Response details:</h2>
  <%= @results.ai(:html => true)  %>
<% end %>